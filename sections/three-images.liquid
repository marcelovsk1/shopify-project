<section>
  <div class="three-images-wrapper">
    {%- if section.settings.image != blank -%}
      <div class="one-user">
      </div>
    {%- else -%}
      <div class="one">
      </div>
    {%- endif -%}
    {%- if section.settings.image2 != blank -%}
      <div class="two-user">
        <h1>Image 2</h1>
      </div>
    {%- else -%}
      <div class="two">
      </div>
    {%- endif -%}
    {%- if section.settings.image3 != blank -%}
      <div class="three-user">
      </div>
    {%- else -%}
      <div class="three">
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .three-images-wrapper {
    display: flex;
  }

  .one, .one-user, .two, .two-user, .three, .three-user {
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .one {
    background-image: url("{{ 'one.png' | asset_url }}");
  }
  .one-user {
    background-image: url("{{ section.settings.image | image_url }}");
  }
  .two {
    background-image: url("{{ 'two.png' | asset_url }}");
  }
  .two-user {
    background-image: url("{{ section.settings.image2 | image_url }}");
  }
  .three {
    background-image: url("{{ 'three.png' | asset_url }}");
  }
  .three-user {
    background-image: url("{{ section.settings.image3 | image_url }}");
  }
</style>

{% schema %}
{
  "name": "three-images",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image 1",
      "info": "400 x 120px .png recommended"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2",
      "info": "400 x 120px .png recommended"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3",
      "info": "400 x 120px .png recommended"
    }
  ],
  "presets": [
    {
      "name": "three-images"
    }
  ]
}
{% endschema %}
